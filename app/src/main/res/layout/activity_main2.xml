<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:background="#EDECE6"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/image_view_5050"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/choose_5050"
                    android:onClick="choose5050"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_view_change_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/change_question"
                    android:onClick="changeQuestions"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_view_count_down"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/desgin_countdown"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/image_view_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/light"
                    android:onClick="chooseReminder"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/image_view_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone"
                    android:onClick="asked_the_Audience"
                    />
            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

                <ImageView
                    android:id="@+id/img_coins_rotate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/coin"
                    android:layout_toRightOf="@id/text_view_question_number"
                    android:layout_marginLeft="20dp"
                    android:layout_alignBottom="@id/text_view_question_number"
                    />

            <TextView
                android:id="@+id/text_view_coins_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/text_view_question_number"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/img_coins_rotate"
                android:text="10"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/text_view_name"
                android:text="Ques:1"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_view_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/text_view_coins_current"
                android:layout_marginLeft="10dp"
                android:background="@drawable/man"
                android:layout_alignBottom="@id/text_view_question_number"
                />

            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/image_view_character"
                android:text="name"
                android:textSize="25sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/desgin_countdown"
        android:layout_weight="2"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
        <TextView
            android:id="@+id/text_view_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is question"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/text_view_reminder"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is question"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:background="@drawable/desgin_button"
                android:gravity="center"
                android:padding="140px"/>

        </RelativeLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:background="@drawable/design_answer"
            android:gravity="center"
            android:padding="10dp"
            android:text="A"
            android:textColor="#FAD729"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B"
            android:textColor="#FAD729"
            android:textSize="27sp"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="@drawable/design_answer"
            android:layout_marginBottom="17dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/text_view_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C"
            android:textColor="#FAD729"
            android:textSize="27sp"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="@drawable/design_answer"
            android:layout_marginBottom="17dp" />
        <TextView
            android:id="@+id/text_view_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D"
            android:textColor="#FAD729"
            android:textSize="27sp"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="@drawable/design_answer"
            android:layout_marginBottom="17dp"
            android:layout_weight="1"/>


    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout_result2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDECE6"
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:orientation="vertical"
        android:padding="16dp"
        >
        <ImageView
            android:layout_marginTop="150dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/trophy"
            />
        <TextView
            android:id="@+id/text_view_result2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Result"
            android:textSize="22sp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            >
            <Button
                android:id="@+id/button_home2"
                android:layout_marginLeft="70dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/desgin_button"
                android:text="Home"
                android:textColor="#fff"

                />
            <Button
                android:id="@+id/button_savescore2"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="80dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/desgin_button"
                android:text="Save Score"
                android:textColor="#fff"
                />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@android:color/white">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.drawerlayout.widget.DrawerLayout>