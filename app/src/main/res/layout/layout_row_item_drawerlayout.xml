<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
    <LinearLayout
        android:id="@+id/linear_layout_adapter_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:id="@+id/image_icon_question_row"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/icon_question"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/text_view_number_quesion_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"/>
        <ImageView
            android:id="@+id/image_view_icon_coins_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coin"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/text_view_coins_number_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>