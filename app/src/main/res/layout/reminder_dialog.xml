<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_zukerberg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_putin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_view_putin"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/markzukerberg" />

    <ImageView
        android:id="@+id/image_view_trump"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_steavjob"
        app:layout_constraintEnd_toEndOf="@+id/image_view_putin"
        app:layout_constraintStart_toStartOf="@+id/image_view_putin"
        app:layout_constraintTop_toBottomOf="@+id/image_view_putin"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/trump" />

    <ImageView
        android:id="@+id/image_view_steavjob"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toEndOf="@+id/image_view_zukerberg"
        app:layout_constraintStart_toStartOf="@+id/image_view_zukerberg"
        app:layout_constraintTop_toBottomOf="@+id/image_view_putin"
        app:srcCompat="@drawable/steave_jobs" />

    <ImageView
        android:id="@+id/image_view_putin"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@+id/image_view_zukerberg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/putin" />

    <TextView
        android:id="@+id/textview_reminder_dialog"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal"
        android:textColor="#FFEC43"
        android:textColorHighlight="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/image_view_steavjob"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/image_view_trump"
        app:layout_constraintTop_toBottomOf="@+id/image_view_steavjob"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>